{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src" ,
    "outDir": "./dist",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts", "./src/*.ts"],
  "exclude": ["./node_modules", "./dist"]
}
